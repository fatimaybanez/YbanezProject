<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:gravity="center_horizontal"
        android:background="@drawable/logotu"
        android:id="@+id/imageView"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:contextClickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="X"
        android:paddingLeft="26dp"
        android:id="@+id/textView3"
        android:typeface="serif"
        android:layout_below="@+id/imageView"
        android:textSize="18dp" />

    <EditText
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:singleLine="true"
        android:layout_above="@+id/editText4"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Y"
        android:paddingLeft="26dp"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/editText4"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:typeface="serif"
        android:textSize="18dp" />

    <EditText
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:singleLine="true"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Difference    "
        android:paddingLeft="26dp"
        android:id="@+id/textView5"
        android:typeface="serif"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/editText5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:singleLine="true"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Quadrant"
        android:paddingLeft="26dp"
        android:id="@+id/textView6"
        android:typeface="serif"
        android:textSize="18dp"
        android:layout_above="@+id/editText7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:singleLine="true"
        android:layout_below="@+id/editText5"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Motion"
        android:id="@+id/textView7"

        android:paddingLeft="26dp"
        android:typeface="serif"
        android:textSize="18dp"
        android:layout_above="@+id/buttonback"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:layout_below="@+id/editText6"
        android:layout_alignRight="@+id/editText6"
        android:layout_alignEnd="@+id/editText6"
        android:singleLine="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="BACK"
        android:id="@+id/buttonback"
        android:longClickable="false"
        android:contextClickable="true"

        android:textColor="#ffffff"
        android:typeface="sans"
        android:layout_marginTop="21dp"
        android:background="#ff8181"
        android:layout_below="@+id/editText7"
        android:layout_alignRight="@+id/editText7"
        android:layout_alignEnd="@+id/editText7" />

</RelativeLayout>